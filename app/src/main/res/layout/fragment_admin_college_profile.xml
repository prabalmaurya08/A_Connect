<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <!-- Top LinearLayout containing the Image -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <!-- Background Image -->
            <ImageView
                android:id="@+id/backgroundImage"
                android:layout_width="match_parent"
                android:layout_height="289dp"
                android:contentDescription="@string/college_image"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/college_image" />

            <!-- Buttons over Image -->


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addimage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/green1"
                    android:textAllCaps="false"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="12dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/deleteimage"
                    android:padding="15dp"
                    android:text="@string/add_image" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteimage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="12dp"
                   android:layout_marginHorizontal="16dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/green1"
                    android:padding="15dp"
                    app:cornerRadius="12dp"
                    app:layout_constraintStart_toEndOf="@id/addimage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textAllCaps="false"
                    android:text="@string/delete_image" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Content Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll1">

            <!-- Tagline -->
            <TextView
                android:id="@+id/tagline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                android:paddingVertical="5dp"
                android:text="@string/tagline"
                android:textColor="@color/black1" />

            <EditText
                android:id="@+id/edittagline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_area_box"
                android:hint="@string/add_shart_tag_line"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@id/tagline" />

            <!-- Social Icons -->
            <LinearLayout
                android:id="@+id/socialIcons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/edittagline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- LinkedIn Icon -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_area_box"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="5dp">
                    <ImageButton
                        android:id="@+id/linkedinIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/social_icon_linkdin"
                        android:contentDescription="@string/linkedin"
                        android:background="@null"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Gmail Icon -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_area_box"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="5dp">
                    <ImageButton
                        android:id="@+id/gmailIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/social_icon_gmail"
                        android:contentDescription="@string/gmail"
                        android:background="@null"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Instagram Icon -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_area_box"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="5dp">
                    <ImageButton
                        android:id="@+id/instagramIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/social_icon_instagram"
                        android:contentDescription="@string/instagram"
                        android:background="@null"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Twitter Icon -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_area_box"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="5dp">
                    <ImageButton
                        android:id="@+id/twitterIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/social_icon_thread"
                        android:contentDescription="@string/twitter"
                        android:background="@null"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <!-- Import Excel Data Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/import_excel_data"
                app:layout_constraintTop_toBottomOf="@id/socialIcons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green1"
                android:layout_marginTop="10dp"
                app:cornerRadius="12dp"
                android:padding="15dp"
                android:text="@string/import_excel_data" />

            <!-- Tab Layout -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/mainLoginTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorHeight="5dp"
                app:layout_constraintTop_toBottomOf="@id/import_excel_data"
                app:tabIndicatorColor="@color/green1"
                app:tabIndicatorFullWidth="true"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabRippleColor="@null">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/millestones" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/posts" />
            </com.google.android.material.tabs.TabLayout>

            <!-- ViewPager -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/login_viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/mainLoginTabLayout"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</ScrollView>
