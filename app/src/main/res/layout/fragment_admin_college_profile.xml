<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".admin.adminCollegeProfile.AdminCollegeProfile"


    android:fillViewport="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top LinearLayout containing the Image -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Background Image -->
                <ImageView
                    android:id="@+id/backgroundImage"
                    android:layout_width="match_parent"
                    android:layout_height="289dp"
                    android:contentDescription="@string/college_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/college_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Buttons over Image -->


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addimage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/green1"
                    android:elevation="13dp"
                    android:fontFamily="@font/sf_pro_display"

                    android:padding="11dp"
                    android:text="@string/add_image"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"

                    app:elevation="13dp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteimage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/sf_pro_display"
                    android:padding="11dp"
                    android:text="@string/delete_image"
                    android:textAllCaps="false"
                    android:textColor="@color/green1"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/addimage" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Content Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll1">

                <!-- Tagline -->
                <TextView
                    android:id="@+id/tagline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/sf_pro_display"
                    android:paddingVertical="5dp"
                    android:text="@string/tagline"
                    android:textColor="@color/black1"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edittagline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_area_box"
                    android:elevation="10dp"
                    android:fontFamily="@font/sf_pro_display"
                    android:hint="@string/add_shart_tag_line"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tagline" />

                <!-- Social Icons -->
                <LinearLayout
                    android:id="@+id/socialIcons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:elevation="13dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edittagline">

                    <!-- LinkedIn Icon -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/edit_area_box"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp">

                        <ImageButton
                            android:id="@+id/linkedinIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@null"
                            android:contentDescription="@string/linkedin"
                            android:src="@drawable/social_icon_linkdin"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Gmail Icon -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/edit_area_box"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp">

                        <ImageButton
                            android:id="@+id/gmailIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@null"
                            android:contentDescription="@string/gmail"
                            android:src="@drawable/social_icon_gmail"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Instagram Icon -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/edit_area_box"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp">

                        <ImageButton
                            android:id="@+id/instagramIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@null"
                            android:contentDescription="@string/instagram"
                            android:src="@drawable/social_icon_instagram"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Twitter Icon -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/edit_area_box"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp">

                        <ImageButton
                            android:id="@+id/twitterIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@null"
                            android:contentDescription="@string/twitter"
                            android:src="@drawable/social_icon_thread"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <!-- Import Excel Data Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/import_excel_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/green1"
                    android:fontFamily="@font/sf_pro_display"
                    android:padding="12dp"
                    android:text="@string/import_excel_data"
                    app:cornerRadius="12dp"
                    app:layout_constraintTop_toBottomOf="@id/socialIcons" />

                <!-- Tab Layout -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/mainLoginTabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/import_excel_data"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@color/green1"
                    app:tabIndicatorFullWidth="true"
                    app:tabIndicatorHeight="5dp"
                    app:tabMode="fixed"
                    app:tabRippleColor="@null">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/millestones" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/posts" />
                </com.google.android.material.tabs.TabLayout>

                <!-- ViewPager -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/login_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mainLoginTabLayout" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
