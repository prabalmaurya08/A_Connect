<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/aluminiHomeDrawerLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".alumni.alumniHome.AlumniHomePage">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"

       >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aluminiHomeToolbar"
            app:layout_constraintTop_toTopOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.google.android.material.search.SearchBar

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintEnd_toStartOf="@id/aluminiHomePageChat"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    android:id="@+id/aluminiHomePageSearchBar"


                    />


                <ImageView
                    android:id="@+id/aluminiHomePageChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/chat_icon"/>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.appcompat.widget.Toolbar>

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:fillViewport="true"
           app:layout_constraintTop_toBottomOf="@id/aluminiHomeToolbar"
           app:layout_constraintBottom_toBottomOf="parent">
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingHorizontal="15dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/userName"
                   android:textStyle="bold"
                   app:layout_constraintTop_toTopOf="parent"
                   android:paddingVertical="10dp"
                   android:textSize="22sp"/>


               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/cardview"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   app:cardCornerRadius="28.5dp"
                   app:cardElevation="0.5dp"
                   app:layout_constraintTop_toBottomOf="@id/userName"

                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent">

                   <ImageView
                       android:id="@+id/alumniHomePageCollegeImage"
                       android:layout_width="match_parent"
                       android:contentDescription="@string/college_image"
                       android:scaleType="centerCrop"
                       android:layout_height="200dp" />


               </com.google.android.material.card.MaterialCardView>

            <!--               Explore section -->
               <TextView
                   android:id="@+id/explore_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/cardview"
                   android:text="Explore"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/cardview"
                   android:text="Full Map"/>


               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/explore_cardview"
                   android:layout_width="match_parent"
                   android:layout_height="250dp"
                   app:cardCornerRadius="28.5dp"
                   app:cardElevation="0.5dp"
                   app:layout_constraintTop_toBottomOf="@id/explore_tv">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                       <FrameLayout
                           android:id="@+id/mapPreviewContainer"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent" />

                       <TextView
                           android:id="@+id/viewFullMap"
                           android:layout_width="match_parent"
                           android:gravity="center"
                           android:layout_height="wrap_content"
                           android:layout_alignParentBottom="true"
                           android:layout_centerHorizontal="true"

                           android:background="@drawable/rounded_button"
                           android:padding="8dp"
                           android:text="View Full Map"
                           android:textColor="@android:color/white"
                           android:textSize="16sp"/>
                   </RelativeLayout>
               </com.google.android.material.card.MaterialCardView>

<!--               College Event-->
               <TextView
                   android:id="@+id/college_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/explore_cardview"
                   android:text="College Event"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/explore_cardview"
                   android:text="See All"/>




               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/college_cardview"
                   android:layout_width="match_parent"
                   android:layout_height="250dp"
                   app:cardCornerRadius="28.5dp"
                   app:cardElevation="0.5dp"

                   app:layout_constraintTop_toBottomOf="@id/college_tv">

               </com.google.android.material.card.MaterialCardView>

<!--               Trending News -->
               <TextView
                   android:id="@+id/trendingNews_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/college_cardview"
                   android:text="Trending News"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/college_cardview"
                   android:text="See All"/>

               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/trendingNews_cardview"
                   android:layout_width="match_parent"
                   android:layout_height="250dp"
                   app:cardCornerRadius="28.5dp"
                   app:cardElevation="0.5dp"
                   app:layout_constraintTop_toBottomOf="@id/trendingNews_tv">

               </com.google.android.material.card.MaterialCardView>

               <!--               Donate Section-->
               <com.google.android.material.card.MaterialCardView
                   android:layout_width="match_parent"
                   android:layout_height="114dp"
                   app:cardCornerRadius="28.5dp"
                   app:cardElevation="0.5dp"

                   android:layout_marginTop="10dp"

                   app:layout_constraintTop_toBottomOf="@id/trendingNews_cardview">


               </com.google.android.material.card.MaterialCardView>



           </androidx.constraintlayout.widget.ConstraintLayout>
       </ScrollView>
       <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:id="@+id/fabVoiceInput"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:contentDescription="floatingButton"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:src="@drawable/microphone"
           android:layout_margin="20dp"


           />


   </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
   android:id="@+id/aluminiHomeNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"


        app:menu="@menu/alumini_hamburger_menu" />



</androidx.drawerlayout.widget.DrawerLayout>