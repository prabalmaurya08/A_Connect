<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
   >
    
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Profile"
            app:titleCentered="true"
            app:navigationIcon="@drawable/hamburger_menu"
            >

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginHorizontal="16dp"

        app:layout_constraintTop_toBottomOf="@id/appbar"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
     >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profile image and statistics -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_stats_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="16dp"
                android:background="@drawable/shape_card"
                android:elevation="10dp"
                android:padding="16dp">

                <!-- Circle ImageView -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/edit_profile_circleImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/alumni_profile_photo"
                    app:civ_border_color="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ImageContrastCheck" />


                <!-- Post, Student, Alumni stats -->
                <LinearLayout
                    android:id="@+id/stats_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edit_profile_circleImageView">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display"
                        android:gravity="center"
                        android:text="@string/_1_234_nposts"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display"
                        android:gravity="center"
                        android:text="@string/_5_678_nstudents"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display"
                        android:gravity="center"
                        android:text="@string/_9_101_nalumni"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Bio -->
                <TextView
                    android:id="@+id/bio_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="30dp"
                    android:text="@string/bio"
                    android:textColor="#616161"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stats_container" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Unique ID button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/unique_id_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_stats_container"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/blue1"
                android:fontFamily="@font/sf_pro_display"
                android:text="@string/get_your_unique_id_txt"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                tools:ignore="VisualLintButtonSize" />

            <!-- Edit and Share Profile buttons -->
            <LinearLayout
                android:id="@+id/edit_share_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/unique_id_button"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/edit_profile_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"



                    android:textStyle="bold"
                    android:textColor="@color/blue1"


                    android:fontFamily="@font/sf_pro_display"
                    android:text="@string/edit_profile_txt"

                    app:backgroundTint="#F0F0F0"
                    app:cornerRadius="12dp"
                    app:elevation="14dp"
                    app:rippleColor="@android:color/darker_gray"
                    tools:ignore="VisualLintButtonSize" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/share_profile_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sf_pro_display"
                    android:text="@string/share_profile_txt"
                    android:textColor="@color/blue1"
                    app:backgroundTint="#F0F0F0"
                    app:cornerRadius="12dp"
                    app:elevation="4dp"
                    app:rippleColor="@android:color/darker_gray"
                    tools:ignore="VisualLintButtonSize" />

            </LinearLayout>

            <!-- Social Icons -->
            <LinearLayout
                android:id="@+id/socialIcons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_share_buttons_container"
                android:layout_marginTop="10dp"
                android:elevation="13dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_share_buttons_container">

                <!-- LinkedIn Icon -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/edit_area_box"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp">

                    <ImageButton
                        android:id="@+id/linkedinIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:contentDescription="@string/linkedin"
                        android:src="@drawable/social_icon_linkdin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Gmail Icon -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/edit_area_box"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp">

                    <ImageButton
                        android:id="@+id/gmailIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:contentDescription="@string/gmail"
                        android:src="@drawable/social_icon_gmail"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Instagram Icon -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/edit_area_box"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp">

                    <ImageButton
                        android:id="@+id/instagramIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:contentDescription="@string/instagram"
                        android:src="@drawable/social_icon_instagram"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Twitter Icon -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/edit_area_box"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp">

                    <ImageButton
                        android:id="@+id/twitterIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:contentDescription="@string/twitter"
                        android:src="@drawable/social_icon_thread"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/socialIcons"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <!-- Tab Layout -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/mainLoginTabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="#246BFD"
                    app:tabIndicatorFullWidth="true"
                    app:tabIndicatorHeight="5dp"
                    app:tabMode="fixed"
                    app:tabRippleColor="@null">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="@string/millestones" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="@string/posts" />
                </com.google.android.material.tabs.TabLayout>


            </LinearLayout>
            <!-- ViewPager -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/login_viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignBottom="@id/ll"
                android:layout_marginTop="20dp" />


        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
