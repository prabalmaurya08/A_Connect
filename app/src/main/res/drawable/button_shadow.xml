<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40250000" /> <!-- 25% black -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Main Button Layer -->
    <item android:top="1dp"> <!-- y = 1dp -->
        <shape android:shape="rectangle">
            <solid android:color="@color/green1" /> <!-- Your button color -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
